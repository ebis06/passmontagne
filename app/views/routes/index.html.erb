<h1>Listing routes</h1>
<script type="Text/Javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script type="text/javascript" src="/assets/js/jquery.sudoSlider.min.js"></script>
 <script type="text/javascript" >
   $(document).ready(function(){  
      var sudoSlider = $("#slider").sudoSlider({ 
         fade: true,
         auto:true,
         prevNext:false
      });
   });
   </script>
<center>
<div id="slider" >
    <ul>
        <li><img src="/assets/01.jpg" alt="image description"/></li>
        <li><img src="/assets/02.jpg" alt="image description"/></li>
        <li><img src="/assets/03.jpg" alt="image description"/></li>
        <li><img src="/assets/04.jpg" alt="image description"/></li>
        <li><img src="/assets/05.jpg" alt="image description"/></li>  
    </ul>
</div>
</center>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @routes.each do |route| %>
  <tr>
    <td><%= route.title %></td>
    <td><%= route.description %></td>
    <td><%= image_tag route.image.url %></td>
    <td><%= route.price %></td>
    <td><%= link_to 'Show', route %></td>
    <td><%= link_to 'Edit', edit_route_path(route) %></td>
    <td><%= link_to 'Destroy', route, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

